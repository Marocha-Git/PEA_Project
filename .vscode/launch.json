  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/${workspaceFolderBasename}.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "D:\\Programy\\MinGW\\bin\\gdb.exe",
      "setupCommands": [
        {
          "description": "Włącz formatowanie kodu dla gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true,
          "breakOnLoadStrategy": "regex"
        }
      ],
      "preLaunchTask": "build"
    }
  ]
}
